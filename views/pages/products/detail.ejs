<!DOCTYPE html>
<html>
    <%- include('../../partials/head', {title: 'Product Details'}); %>
<body>
    <%- include('../../partials/header') %>
    <div class="container-fluid maincontainer">
        <% if(data.error) { %>
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>Error</strong><%= data.error %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        <% } %>
        <div class="row">
            <div class="col-6">
                <img class="detailImg" src="../<%= data.item.imagePath %>">
            </div>
            <div class="col-3">
                <div class="row">
                    <form class="form" method="POST" action="/cart/add/<%= data.item.id %>">
                        <div class="form-group">
                            <label for="name">Name:</label>
                            <span><%= data.item.name%></span>
                        </div>
                        <div class="form-group">
                                <label for="name">Price:</label>
                                <span><%= data.item.getPriceFormat('IDR') %></span>
                            </div>
                        <div class="form-group">
                            <label for="productQty">Quantity</label>
                            <input type="text" name="quantity" class="form-control" id="productQty" placeholder="Quantity...">
                        </div>
                        <button class="btn purple-btn mt-4">Add to Cart</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include ../../partials/footer %>
</body>

</html>