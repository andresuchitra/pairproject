<!DOCTYPE html>
<html>
<%- include('../../partials/head', {title: 'Dashboard: Products'})%>

<body>
    <%- include ../../partials/header %>
    <div class="container-fluid maincontainer">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Picture</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Details</th>
                </tr>
            </thead>
            <tbody>
                <% items.forEach( item => {%>
                <tr>
                    <th scope="row"><%= item.id%></item></th>
                    <td><img class="img-fluid img-thumbnail productImg" src=<%= item.imagePath%> alt=""></td>
                    <td><%= item.name%></td>
                    <td>@<%= item.price%></td>
                    <td>@<%= item.quantity%></td>
                    <td><a href="./details" class="btn btn-primary">Edit</a></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <%- include ../../partials/footer %>
</body>

</html>